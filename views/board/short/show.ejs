<!DOCTYPE html>
<html>
  <head>
    <%- include('../../partials/head') %>
  </head>
  <body>
    <%- include('../../partials/nav') %>

    <div class="container mb-3">

      <div class="card">
        <h5 class="card-header p-2"><%= board.title %></h5>
        <div class="row"> <!-- 1 -->

          <div class="col-md-7 col-lg-8 col-xl-9 order-sm-2 order-md-1"> <!-- 1 -->
            <div class="board-body p-2"><%= board.content %></div>
          </div>

        </div>
      </div>

      <div class="mt-3">
        <a class="btn btn-primary" href="/board/short">뒤로 가기</a>
        <a class="btn btn-primary" href="/board/short/<%= board._id %>/edit">수정</a>
        <form action="/board/short/<%= board._id %>?_method=delete" method="POST" class="d-inline">
          <a class="btn btn-primary" href="javascript:void(0)" onclick="confirm('삭제하시겠습니까?')?this.parentElement.submit():null;">삭제</a>
        </form>
      </div>

    </div>
  </body>
</html>
